<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_campo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="club.cartoleirosfutebol.cartomitos.LineUpActivity"
    tools:showIn="@layout/activity_line_up">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5"
        android:rowCount="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="55dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ata1"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_column="2"
                    android:layout_marginLeft="@dimen/margin_jog_lineup"
                    android:layout_marginRight="@dimen/margin_jog_lineup"
                    android:layout_marginTop="@dimen/margin_jog_lineup"
                    android:layout_row="0"
                    android:src="@drawable/ic_escudo" />

                <TextView
                    android:id="@+id/nmAta1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atacante"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ata2"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_column="3"
                    android:layout_marginLeft="@dimen/margin_jog_lineup"
                    android:layout_marginRight="@dimen/margin_jog_lineup"
                    android:layout_marginTop="@dimen/margin_jog_lineup"
                    android:layout_row="0"
                    android:src="@drawable/ic_escudo" />

                <TextView
                    android:id="@+id/nmAta2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atacante"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ata3"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_column="4"
                    android:layout_marginLeft="@dimen/margin_jog_lineup"
                    android:layout_marginRight="@dimen/margin_jog_lineup"
                    android:layout_marginTop="@dimen/margin_jog_lineup"
                    android:layout_row="0"
                    android:src="@drawable/ic_escudo" />

                <TextView
                    android:id="@+id/nmAta3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atacante"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mei1"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_column="2"
                android:layout_marginLeft="@dimen/margin_jog_lineup"
                android:layout_marginRight="@dimen/margin_jog_lineup"
                android:layout_marginTop="@dimen/margin_jog_lineup"
                android:layout_row="1"
                android:src="@drawable/ic_escudo" />

            <TextView
                android:id="@+id/nmMei1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meia"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mei2"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_column="3"
                android:layout_marginLeft="@dimen/margin_jog_lineup"
                android:layout_marginRight="@dimen/margin_jog_lineup"
                android:layout_marginTop="@dimen/margin_jog_lineup"
                android:layout_row="1"
                android:src="@drawable/ic_escudo" />

            <TextView
                android:id="@+id/nmMei2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meia"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mei3"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_column="4"
                android:layout_marginLeft="@dimen/margin_jog_lineup"
                android:layout_marginRight="@dimen/margin_jog_lineup"
                android:layout_marginTop="@dimen/margin_jog_lineup"
                android:layout_row="1"
                android:src="@drawable/ic_escudo" />

            <TextView
                android:id="@+id/nmMei3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meia"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
