<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dbitem_selector"
    android:orientation="horizontal"
    android:padding="5dip"
    android:descendantFocusability="blocksDescendants">
    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip">
        <ImageView
            android:id="@+id/db_icon"
            android:paddingTop="10dip"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:focusable="false"
            android:src="@drawable/emptystate_jogador"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/sendButton"
        android:src="@drawable/ic_next"
        android:scaleType="fitXY"
        android:padding="13dp"
        android:focusable="false"
        android:background="@drawable/rounded_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/db_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="75dip"
        android:layout_toRightOf="@id/db_icon"
        android:focusable="false"
        android:paddingBottom="15dip"
        android:text="Jogador"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans" />
    <TextView
        android:id="@+id/db_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/db_titulo"
        android:layout_below="@id/db_titulo"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:paddingTop="3dip"
        android:text="Posição"
        android:textColor="#343434"
        android:textSize="13sp" />
</RelativeLayout>